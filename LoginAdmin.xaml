<Window x:Class="Unach.Gastosdiarios.WPF.LoginAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Administrador" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Usuario:" Margin="0 10 0 0"/>
            <TextBox Name="txtUsuario" Width="200"/>

            <TextBlock Text="Contraseña:" Margin="0 10 0 0"/>
            <PasswordBox Name="txtContrasena" Width="200"/>

            <Button Content="Iniciar Sesión" Margin="0 20 0 0" Click="BtnIniciarSesion_Click"/>
        </StackPanel>
    </Grid>
</Window>
