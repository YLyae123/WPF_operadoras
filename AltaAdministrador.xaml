<Window x:Class="Unach.Gastosdiarios.WPF.AltaAdministrador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Administrador" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" >
            <TextBlock Text="Nombre completo:" FontWeight="Bold"/>
            <TextBox Name="txtNombre" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Usuario:" FontWeight="Bold"/>
            <TextBox Name="txtUsuario" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Contraseña:" FontWeight="Bold"/>
            <PasswordBox Name="txtPassword" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Operadora:" FontWeight="Bold"/>
            <ComboBox Name="cmbOperadora" DisplayMemberPath="Nombre" SelectedValuePath="Id" Margin="0,5,0,20" Height="25"/>

            <Button Content="Guardar" Width="100" Height="30" HorizontalAlignment="Center" Click="BtnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
